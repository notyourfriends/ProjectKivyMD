MDScreen:
	MDToolbar:
		id:toolbar
		title: 'Swiper App'
		elevation: 10
		pos_hint: {'top': 1}

	MDSwiper:
		id: swiper
		size_hint_y: None
		height: root.height - toolbar.height - dp(40)
		y: root.height - self.height - toolbar.height - dp(20)

		on_swiper:
		on_pre_swiper:
		on_overswipe_right:
		on_overswipe_left:
		on_swipe_left: app.on_swipe_left()
		on_swipe_right: app.on_swipe_right()


