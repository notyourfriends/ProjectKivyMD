MDBoxLayout:
	orientation: 'vertical'

	MDScreen:

		MDLabel:
			id: my_label
			text: 'Some Stuff'
			halign: 'center'

		MDFloatingActionButtonSpeedDial:
			data: app.data
			root_button_anim: True
			#color

			label_text_color: 1,1,0,1 #TextColor
			bg_color_stack_button: 1,0,0,1 #bg of icon
			bg_color_root_button: 0,1,0,1 #speed dial bg
			color_icon_stack_button: 0,1,1,1 #speed dial icon
			color_icon_root_button: 1,0,0,1 #plus sign color
			#bg_hint_color: 1,0,0,1 #icon bg color

			#Pushing the Buttons
			callback: app.callback


